{
  "name": "tauri-controls",
  "description": "Native 'looking' window controls for Tauri 2.",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn  eslint",
      "yarn  format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/tauri-controls.es.js",
      "require": "./dist/tauri-controls.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/tauri-controls.umd.js",
  "module": "./dist/tauri-controls.es.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-dts": "^3.3.1",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0",
    "@tauri-apps/plugin-os": "2.0.0-alpha.0",
    "@tauri-apps/plugin-window": "2.0.0-alpha.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "peerDependencies": {
    "react": ">=17.x",
    "react-dom": ">=17.x",
    "@tauri-apps/plugin-os": "2.0.0-alpha.0",
    "@tauri-apps/plugin-window": "2.0.0-alpha.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agmmnn/tauri-controls"
  },
  "keywords": [],
  "author": "bigyan poudel",
  "bugs": {
    "url": "https://github.com/agmmnn/tauri-controls/issues"
  },
  "homepage": "https://github.com/agmmnn/tauri-controls#readme",
  "license": "MIT"
}
